<div class="span9">
	<h1>Products</h1>
	<hr>
	<p><%= link_to 'New Product', new_product_path, :class => "btn" %></p>
	<table class="table table-striped table-bordered datatable">
		<thead>
			<tr>
				<th class="span2">Brand</th>
				<th class>Title</th>
				<th class="span2">Category</th>
				<th class="span1">Price</th>
		    <th class="span1"></th>
		  </tr>
		</thead>
		<tbody>
	<% @products.each do |product| %>
	  	<tr>
				<td><%= product.brand.name %></td>
				<td><%= link_to product.title, edit_product_path(product) %></td>
				<td><%= product.category.name %></td>
				<td><%= number_to_euro(product.price) %></td>
		    <td> 
					<%= link_to "Delete", product, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %>
				</td>
		  </tr>
	<% end %>
		</tbody>
	</table>
</div>