<div class="span9">
	<h1><%= t 'headers.products' %></h1>
	<hr>
	<p><%= link_to t('buttons.new'), new_product_path, :class => "btn" %></p>
	<table class="table table-striped table-bordered" id="datatable-products">
		<thead>
			<tr>
				<th class="span2"><%= Product.human_attribute_name(:brand) %></th>
				<th class><%= Product.human_attribute_name(:title) %></th>
				<th class="span2"><%= Product.human_attribute_name(:category) %></th>
				<th class="cell-70px"><%= Product.human_attribute_name(:price) %></th>
		    <th class="span1"></th>
		  </tr>
		</thead>
		<tbody>
	<% @products.each do |product| %>
	  	<tr>
				<td><%= product.brand.name %></td>
				<td><%= link_to product.title, edit_product_path(product) %></td>
				<td><%= product.category.name %></td>
				<td><%= number_to_currency(product.price) %></td>
		    <td> 
					<%= link_to t('buttons.destroy'), product, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %>
				</td>
		  </tr>
	<% end %>
		</tbody>
	</table>
</div>