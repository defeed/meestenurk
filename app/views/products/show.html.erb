<div class="span9 product-info">
	<% if notice %>
		<div class="alert alert-info">
			<a class="close" data-dismiss="alert" href="#">Ã—</a>
			<%= notice %>
		</div>
	<% end %>
	<h1><%= "#{@product.brand.name} #{@product.title}" %></h1>
	<hr>
	<div class="row">
		<div class="span4">
			<div class="thumbnail">
				<%= image_tag(@product.picture.url(:medium), :alt => "#{@product.brand.name} #{@product.title}", :title => "#{@product.brand.name} #{@product.title}") %>
			</div>
		</div>
		<div class="span5">
			<p><%= @product.description %></p>
			<div class="buy">
      	<p class="lead"><%= Product.human_attribute_name(:price) %>: <%= number_to_currency(@product.price) %></p>
				<p>
					<%= button_to "#{t 'products.buy_now'}", line_items_path(:product_id => @product), :class => "btn btn-success" %>
					<%= button_to "#{t 'products.add_to_cart'}", line_items_path(:product_id => @product), :class => "btn", :remote => true %>
				</p>
      </div>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="span9">
			<h2><%= t 'products.about_company' %> <%= @product.brand.name %></h2>
			<p><%= @product.brand.description %></p>
		</div>
	</div>
	<p><%= link_to("#{t 'buttons.edit'}", edit_product_path, :class => "btn btn-large") if current_user %></p>
</div><!--/span-->