<div class="span9">
	<h1><%= t 'headers.payment_methods' %></h1>
	<hr>
	<p><%= link_to t('buttons.new'), new_payment_method_path, :class => "btn" %></p>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
		    <th><%= PaymentMethod.human_attribute_name(:name) %></th>
		    <th class="span1"></th>
		  </tr>
		</thead>
		<tbody>
	<% @payment_methods.each do |payment_method| %>
	  	<tr>
		    <td><%= link_to payment_method.name, edit_payment_method_path(payment_method) %></td>
		    <td><%= link_to t('buttons.destroy'), payment_method, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %></td>
		  </tr>
	<% end %>
		</tbody>
	</table>
</div>