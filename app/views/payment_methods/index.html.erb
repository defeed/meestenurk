<div class="span9">
	<h1>Payment Methods</h1>
	<hr>
	<p><%= link_to 'New Payment Method', new_payment_method_path, :class => "btn" %></p>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
		    <th>Name</th>
		    <th class="span1"></th>
		  </tr>
		</thead>
		<tbody>
	<% @payment_methods.each do |payment_method| %>
	  	<tr>
		    <td><%= link_to payment_method.name, edit_payment_method_path(payment_method) %></td>
		    <td><%= link_to "Delete", payment_method, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %></td>
		  </tr>
	<% end %>
		</tbody>
	</table>
</div>