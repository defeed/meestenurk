<div class="span9">
	<h1>Your Cart</h1>
	<hr>
	<table class="table">
		<thead>
			<tr>
				<th>Product</th>
				<th class="cell-70px">Quantity</th>
				<th class="cell-70px">Price</th>
				<th class="cell-70px">Subtotal</th>
				<th></th>
			</tr>
		</thead>
		<% @cart.line_items.each do |item| %>
		<tr>
			<td><%= link_to "#{item.product.brand.name} #{item.product.title}", product_path(item.product) %></td>
			<td>
				<%= link_to content_tag(:i, "", :class => "icon icon-minus", :title => "Decrement"), decrement_line_item_path(item), :method => :post %>
				<span class="badge"><%= item.quantity %></span>
				<%= link_to content_tag(:i, "", :class => "icon icon-plus", :title => "Increment"), increment_line_item_path(item), :method => :post %>
			</td>
			<td><%= number_to_euro(item.product.price) %></td>
			<td><%= number_to_euro(item.total_price) %></td>
			<td><%= link_to content_tag(:i, "", :class => "icon icon-remove", :title => "Remove from cart"), item, :method => :delete %></td>
		</tr>
		<% end %>
		<tr id="total_line">
			<td colspan="3"><span class="pull-right">Total:</span></td>
			<td><%= number_to_euro(@cart.total_price) %></td>
			<td></td>
		</tr>
	</table>
	<%= link_to "Empty Cart", @cart, method: :delete, :class => "btn" %>
	<%= link_to "Checkout", "#", :class => "btn btn-success" %>
</div>