<div class="span9">
	<h1>Orders</h1>
	<hr>
	<table class="table table-striped table-bordered" id="datatable-orders">
	  <thead>
	  	<tr>
				<th>#</th>
		    <th>Customer</th>
		    <th>Payment</th>
		    <th>Delivery</th>
		    <th>Status</th>
				<th>Date</th>
				<th>Amount</th>
		  </tr>
	  </thead>
		<tbody>
	<% @orders.each do |order| %>
	  <tr>
			<td><%= link_to "##{order.id}", order_path(order) %></td>
	    <td>
				<%= order.full_name %><br>
				<%= order.phone %><br>
				<%= order.email %><br>
				<%= order.full_address %>
			</td>
	    <td><%= order.payment_method.name %></td>
	    <td><%= order.delivery_method.name %></td>
	    <td><%= order.status %></td>
			<td><%= order.created_at %></td>
			<td><%= number_to_euro(order.total_price) %></td>
	  </tr>
	<% end %>
		</tbody>
	</table>

	
</div>