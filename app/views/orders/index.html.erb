<div class="span9">
	<h1>Orders</h1>
	<hr>
	<table class="table table-striped table-bordered" id="datatable-orders">
	  <thead>
	  	<tr>
				<th>#</th>
		    <th>Name</th>
		    <th>Phone</th>
		    <th>E-mail</th>
		    <th>Address</th>
		    <th>Payment</th>
		    <th>Delivery</th>
		    <th>Status</th>
		  </tr>
	  </thead>
		<tbody>
	<% @orders.each do |order| %>
	  <tr>
			<td><%= link_to "##{order.id}", order_path(order) %></td>
	    <td><%= order.full_name %></td>
	    <td><%= order.phone %></td>
	    <td><%= order.email %></td>
	    <td><%= order.full_address %></td>
	    <td><%= order.payment_method.name %></td>
	    <td><%= order.delivery_method.name %></td>
	    <td><%= order.status %></td>
	  </tr>
	<% end %>
		</tbody>
	</table>

	
</div>