<div class="span9">
	<%= render :partial => 'carts/order' %>

	<p>
	  <b>Name:</b>
	  <%= @order.full_name %>
	</p>

	<p>
	  <b>Phone:</b>
	  <%= @order.phone %>
	</p>

	<p>
	  <b>Email:</b>
	  <%= @order.email %>
	</p>

	<p>
	  <b>Address:</b>
	  <%= @order.address %>
	</p>

	<p>
	  <b>City:</b>
	  <%= @order.city %>
	</p>

	<p>
	  <b>Zip:</b>
	  <%= @order.zip %>
	</p>

	<p>
	  <b>Payment method:</b>
	  <%= @order.payment_method.name %>
	</p>

	<p>
	  <b>Shipping method:</b>
	  <%= @order.delivery_method.name %>
	</p>

	<p>
	  <b>Comment:</b>
