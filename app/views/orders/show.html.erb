<div class="span9">
	<table class="table">
		<thead>
			<tr>
				<th>Product</th>
				<th class="cell-80px">Price</th>
				<th class="cell-80px">Quantity</th>
				<th class="cell-80px">Subtotal</th>
			</tr>
		</thead>
		<% @order.order_items.each do |order_item| %>
		<tr>
			<td><%= "#{order_item.product.brand.name} #{order_item.product.title}"%></td>
			<td><%= number_to_euro(order_item.product.price) %></td>
			<td>&times; <%= order_item.quantity %></td>
			<td><%= number_to_euro(order_item.total_price) %></td>
		</tr>
		<% end %>
		<tr id="total_line">
			<td colspan="3"><span class="pull-right">Total:</span></td>
			<td><%= number_to_euro(@order.total_price) %></td>
		</tr>
	</table>

	<p>
	  <b>Name:</b>
	  <%= @order.full_name %>
	</p>

	<p>
	  <b>Phone:</b>
	  <%= @order.phone %>
	</p>

	<p>
	  <b>Email:</b>
	  <%= @order.email %>
	</p>

	<p>
	  <b>Address:</b>
	  <%= @order.address %>
	</p>

	<p>
	  <b>City:</b>
	  <%= @order.city %>
	</p>

	<p>
	  <b>Zip:</b>
	  <%= @order.zip %>
	</p>

	<p>
	  <b>Payment method:</b>
	  <%= @order.payment_method.name %>
	</p>

	<p>
	  <b>Shipping method:</b>
	  <%= @order.delivery_method.name %>
	</p>

	<p>
	  <b>Comment:</b>
	  <%= @order.comment %>
	</p>

	<p>
	  <b>Status:</b>
	  <%= @order.status %>
	</p>
	
</div>