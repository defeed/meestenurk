<div class="span9">
	<%= render @order %>
	<p>
	  <b>Name:</b>
	  <%= @order.full_name %>
	</p>

	<p>
	  <b>Phone:</b>
	  <%= @order.phone %>
	</p>

	<p>
	  <b>E-mail:</b>
	  <%= @order.email %>
	</p>

	<p>
	  <b>Address:</b>
	  <%= @order.full_address %>
	</p>

	<p>
	  <b>Payment method:</b>
	  <%= @order.payment_method.name %>
	</p>

	<p>
	  <b>Shipping method:</b>
	  <%= @order.delivery_method.name %>
	</p>

	<p>
	  <b>Comment:</b>
	  <%= @order.comment %>
	</p>
	
</div>