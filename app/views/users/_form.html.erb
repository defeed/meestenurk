<%= form_for @user, :html => { :class => "form-vertical" } do |f| %>
<% if @user.errors.any? %>
  <div class="alert alert-error">
		<a class="close" data-dismiss="alert" href="#">Ã—</a>
    <h4 class="alert-heading"><%= t('errors.template.header', :count => @user.errors.count) %></h4>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<fieldset>	
	<div class="control-group">
  	<%= f.label :name, :class => "control-label" %>
  	<div class="controls">
  		<%= f.text_field :name, :class => "input-large" %>
  	</div>
	</div>
	
	<div class="control-group">
  	<%= f.label :password, :class => "control-label" %>
  	<div class="controls">
  		<%= f.password_field :password, :class => "input-large" %>
  	</div>
	</div>
	
	<div class="control-group">
  	<%= f.label :password_confirmation, :class => "control-label" %>
  	<div class="controls">
  		<%= f.password_field :password_confirmation, :class => "input-large" %>
  	</div>
	</div>
	
	<div class="control-group">
  	<div class="controls">
  		<%= f.submit t('buttons.save'), :class => "btn btn-large btn-success" %>
			<%= link_to t('buttons.back_to_list'), users_url, :class => "btn btn-large" %>
  	</div>
	</div>
</fieldset>
<% end %>
