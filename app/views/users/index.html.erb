<div class="span9">
	<h1><%= t 'headers.users' %></h1>
	<hr>
	<p><%= link_to t('buttons.new'), new_user_path, :class => "btn" %></p>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
		    <th><%= User.human_attribute_name(:name) %></th>
		    <th class="span1"></th>
		  </tr>
		</thead>
		<tbody>
		<% @users.each do |user| %>
	  	<tr>
		    <td><%= link_to user.name, edit_user_path(user) %></td>
		    <td><%= link_to t('buttons.destroy'), user, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %></td>
		  </tr>
		<% end %>
		</tbody>
	</table>
</div>