<div class="span9">
	<h1>Categories</h1>
	<hr>
	<p><%= link_to 'New Category', new_category_path, :class => "btn" %></p>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
		    <th class="span2">Name</th>
		    <th>Description</th>
		    <th class="span1"></th>
		  </tr>
		</thead>
		<tbody>
	<% @categories.each do |category| %>
	  	<tr>
		    <td><%= link_to category.name, edit_category_path(category) %></td>
		    <td><%= category.description %></td>
		    <td><%= link_to "Delete", category, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %></td>
		  </tr>
	<% end %>
		</tbody>
	</table>
</div>