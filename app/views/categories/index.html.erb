<div class="span9">
	<h1><%= t 'headers.categories' %></h1>
	<hr>
	<p><%= link_to t('buttons.new'), new_category_path, :class => "btn" %></p>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
		    <th class="span2"><%= Category.human_attribute_name(:name) %></th>
		    <th><%= Category.human_attribute_name(:description) %></th>
		    <th class="span1"></th>
		  </tr>
		</thead>
		<tbody>
	<% @categories.each do |category| %>
	  	<tr>
		    <td><%= link_to category.name, edit_category_path(category) %></td>
		    <td><%= category.description %></td>
		    <td><%= link_to t('buttons.destroy'), category, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %></td>
		  </tr>
	<% end %>
		</tbody>
	</table>
</div>