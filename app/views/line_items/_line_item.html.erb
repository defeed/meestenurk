<tr>
	<td><%= link_to "#{line_item.product.brand.name} #{line_item.product.title}", product_path(line_item.product) %></td>
	<td>
		<%= link_to content_tag(:i, "", :class => "icon icon-minus", :title => "Decrement"), decrement_line_item_path(line_item), :method => :post %>
		<span class="badge"><%= line_item.quantity %></span>
		<%= link_to content_tag(:i, "", :class => "icon icon-plus", :title => "Increment"), increment_line_item_path(line_item), :method => :post %>
	</td>
	<td><%= number_to_euro(line_item.product.price) %></td>
	<td><%= number_to_euro(line_item.total_price) %></td>
	<td><%= link_to content_tag(:i, "", :class => "icon icon-remove", :title => "Remove from cart"), line_item, :method => :delete %></td>
</tr>