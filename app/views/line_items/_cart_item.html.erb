<tr>
	<td><%= image_tag(cart_item.product.picture.url(:small), :width => "100") %></td>
	<td>
		<%= link_to "#{cart_item.product.brand.name} #{cart_item.product.title}", product_path(cart_item.product) %>
	</td>
	<td><%= number_to_currency(cart_item.product.price) %></td>
	<td>
		<%= link_to content_tag(:i, "", :class => "icon icon-minus"), decrement_line_item_path(cart_item), :method => :post %>
		<span class="badge"><%= cart_item.quantity %></span>
		<%= link_to content_tag(:i, "", :class => "icon icon-plus"), increment_line_item_path(cart_item), :method => :post %>
	</td>
	<td><%= number_to_currency(cart_item.total_price) %></td>
	<td><%= link_to content_tag(:i, "", :class => "icon icon-remove", :title => "#{t 'line_items.remove_from_cart'}"), cart_item, :method => :delete %></td>
</tr>