<tr>
	<td><%= link_to "#{cart_item.product.brand.name} #{cart_item.product.title}", product_path(cart_item.product) %></td>
	<td><%= number_to_euro(cart_item.product.price) %></td>
	<td>
		<%= link_to content_tag(:i, "", :class => "icon icon-minus", :title => "Decrement"), decrement_line_item_path(cart_item), :method => :post %>
		<span class="badge"><%= cart_item.quantity %></span>
		<%= link_to content_tag(:i, "", :class => "icon icon-plus", :title => "Increment"), increment_line_item_path(cart_item), :method => :post %>
	</td>
	<td><%= number_to_euro(cart_item.total_price) %></td>
	<td><%= link_to content_tag(:i, "", :class => "icon icon-remove", :title => "Remove from cart"), cart_item, :method => :delete %></td>
</tr>